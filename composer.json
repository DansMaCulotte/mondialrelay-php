{
    "name": "dansmaculotte/mondialrelay-php",
    "description": "PHP SDK for MondialRelay Web Services",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "mondialrelay",
        "mondialrelay-webservices"
    ],
    "homepage": "https://github.com/DansMaCulotte/mondialrelay-php",
    "authors": [
        {
            "name": "Martin Potel",
            "email": "martin@dansmaculotte.fr"
        },
        {
            "name": "Gaël Reyrol",
            "email": "gael@dansmaculotte.fr"
        },
        {
            "name": "Romain Touzé",
            "email": "romain@dansmaculotte.fr"
        }
    ],
    "autoload": {
        "psr-4": {
            "DansMaCulotte\\MondialRelay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DansMaCulotte\\MondialRelay\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4||^8.0",
        "ext-soap": "*",
        "laminas/laminas-soap": "^2.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.7",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "format": "@php vendor/bin/php-cs-fixer fix --config .php_cs.php"
    },
    "config": {
        "sort-packages": true
    }
}
